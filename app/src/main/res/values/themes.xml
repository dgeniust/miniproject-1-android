<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiniProject_1_AS_22110264_22110129" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>
    <!-- Circle image style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Calendar View Styles -->
    <style name="CalendarViewCustom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/accent</item>
        <item name="android:weekNumberColor">@color/text_secondary</item>
        <item name="android:selectedWeekBackgroundColor">@color/accent_light</item>
<!--        <item name="android:unfocusedMonthDateColor">@color/text_hint</item>-->
        <item name="android:weekSeparatorLineColor">@color/divider</item>
    </style>

    <style name="CalendarDateText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CalendarWeekText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Theme.MiniProject_1_AS_22110264_22110129" parent="Base.Theme.MiniProject_1_AS_22110264_22110129" />
</resources>